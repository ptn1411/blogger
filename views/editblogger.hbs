<form method="post">
    <fieldset>
        {{#if errorMessages}}
            <div class="alert alert-danger">
                {{errorMessages}}
            </div>
        {{/if}}
        <input type="hidden" name="postId" value="{{data.postId}}">

        <div class="form-group row">
            <label for="staticTitle" class="col-sm-2 col-form-label">Title </label>
            <div class="col-sm-10">
                <input type="text" class="form-control-plaintext" id="staticTitle" name="title" value="{{data.title}}">
            </div>
        </div>
        <div class="form-group row">
            <label for="staticLabels" class="col-sm-2 col-form-label">Labels </label>
            <div class="col-sm-10">
                <input type="text" class="form-control-plaintext" id="staticLabels" name="labels" value="{{data.labels}}">
            </div>
        </div>

        <div class="form-group">
            <textarea name="myTextarea" id="myTextarea" >{{data.content}}</textarea>
        </div>
        <div class="form-group">
            <a href="{{data.url}}">{{data.url}}</a>
        </div>
        <div class="form-group">
           <p>{{data.published}}</p>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </fieldset>
</form>
