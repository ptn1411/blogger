<div class="card" style="width: 18rem;">
    <h3 class="card-header">Users</h3>
    <div class="card-body">
        <h5 class="card-title">{{user.name}}</h5>
    </div>
    <img src="{{image}}" alt="{{user.name}}" style="width:100%">

    <div class="card-footer text-muted">
        {{date}}
    </div>
    <form method="post">
        <ul class="list-group list-group-flush">
            <input type="hidden" name="iduers" value="{{id}}">
            <li class="list-group-item"> <input type="text" value="{{idblogger}}" name="idblogger" class="form-control" placeholder="Id Blogger"></li>
            <li class="list-group-item"> <button type="submit" class="btn btn-primary">Save</button></li>
        </ul>
    </form>
</div>
