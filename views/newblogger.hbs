<form method="post">
    <fieldset>
        {{#if errorMessages}}
            <div class="alert alert-danger">
                {{errorMessages}}
            </div>
        {{/if}}

        <div class="form-group row">
            <label for="staticTitle" class="col-sm-2 col-form-label">Title </label>
            <div class="col-sm-10">
                <input type="text" class="form-control-plaintext" id="staticTitle" name="title" >
            </div>
        </div>
        <div class="form-group row">
            <label for="staticLabels" class="col-sm-2 col-form-label">Labels </label>
            <div class="col-sm-10">
                <input type="text" class="form-control-plaintext" id="staticLabels" name="labels">
            </div>
        </div>

        <div class="form-group">
            <textarea name="myTextarea" id="myTextarea" ></textarea>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </fieldset>
</form>
